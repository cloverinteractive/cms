#tabs
  %ul
    %li= link_to t('links.item_details',  item: Page.model_name ), '#page-editor'
    %li= link_to t('links.item_assets',   item: Page.model_name ), '#assets'

  #page-editor= render 'form', page: @page

  #assets
    .splitcontentleft
      #images_list
        - @page.assets.each do |asset|
          = image_tag asset.asset.url(:small)
      %file#uploadify{ name: 'asset' }
    .splitcontentright
    = render 'shared/uploadify', object: @page
    .spacer
